{
  "name": "Vim",
  "description": "Simplest Vim-like keybinding for Chrome.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "history",
    "bookmarks",
    "storage",
    "sessions",
    "downloads",
    "topSites",
    "downloads.shelf",
    "clipboardRead",
    "clipboardWrite",
    "webNavigation"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["vim.js"],
    "run_at": "document_start",
    "all_frames": true
  }],

  "action": {}
}
