{
  "name": "TamperScripts",
  "description": "Various chrome extensions in one.",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "history",
    "bookmarks",
    "storage",
    "sessions",
    "downloads",
    "topSites",
    "downloads.shelf",
    "clipboardRead",
    "clipboardWrite",
    "webNavigation"
  ],
  "background": {
    "persistant": false,
    "scripts": [
      "background.js",
      "util/include.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "util/include.js",
        "content/vim.js"
      ],
      "css": [
        "css/util.css",
        "css/vim.css"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://twitter.com/*"],
      "js": [
        "util/include.js",
        "content/twitter.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": ["https://www.youtube.com/*"],
      "js": [
        "util/include.js",
        "content/captions.js",
        "content/yt.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://vimeo.com/*",
        "https://www.twitch.tv/videos/*",
        "https://twitter.com/*",
        "https://slideslive.com/*",
        "http://videolectures.net/*",
        "https://complexityexplorer.org/*",
        "https://drive.google.com/*/view"
      ],
      "js": ["content/speed.js"],
      "css": ["css/speed.css"],
      "run_at": "document_start"
    },
    {
      "matches": [ "https://www.reddit.com/*" ],
      "js": ["content/reddit.js"],
      "run_at": "document_idle"
    }
  ]
}
